<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" method="install">
	<name>YaMap</name>
	<author>tr3m0r</author>
	<creationDate>23.04.2014</creationDate>
	<copyright>Copyright (C) 2014 All rights reserved.</copyright>
	<license>GNU General Public License</license>
	<authorEmail>tr3m0r@yandex.ru</authorEmail>
	<authorUrl></authorUrl>
	<version>1.0</version>
	<description>MOD_YAMAP_DESCRIPTION</description>
	<files>
		<filename module="mod_yamap">mod_yamap.php</filename>
		<filename>mod_yamap.xml</filename>
		<filename>index.html</filename>		
        <filename>helper.php</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
	</files>
	<languages>
        <language tag="ru-RU">language/ru-RU/ru-RU.mod_yamap.ini</language> 
        <language tag="ru-RU">language/ru-RU/ru-RU.mod_yamap.sys.ini</language> 
    </languages>
	<config> 
        <fields name="params" label="MOD_YAMAP_PARAMS_LABEL">
            <fieldset name="basic">
				<field
					name="apiVer"
					type="list"
					default="2.1.5"
					label="MOD_YAMAP_API_LABEL"
					description="MOD_YAMAP_API_DESC"
				>
					<option value="2.1.5">2.1.5</option>
				</field>
				<field
					name="mapDivId"
					type="text"
					default="yamap"
					label="MOD_YAMAP_MAPDIVID_LABEL"
					description="MOD_YAMAP_MAPDIVID_DESC"
				/>
				<field
					name="mapDivIdWidth"
					type="text"
					default="100%"
					label="MOD_YAMAP_MAPDIVIDWIDTH_LABEL"
					description="MOD_YAMAP_MAPDIVIDWIDTH_DESC"
				/>
				<field
					name="mapDivIdHeight"
					type="text"
					default="300px"
					label="MOD_YAMAP_MAPDIVIDHEIGHT_LABEL"
					description="MOD_YAMAP_MAPDIVIDHEIGHT_DESC"
				/>
				<field
					name="mapZoom"
					type="text"
					default="16"
					label="MOD_YAMAP_MAPZOOM_LABEL"
					description="MOD_YAMAP_MAPZOOM_DESC"
				/>
				<field
					name="mapCenterLatitude"
					type="text"
					default="55.755826"
					label="MOD_YAMAP_CENTERLATITUDE_LABEL"
					description="MOD_YAMAP_CENTERLATITUDE_DESC"
				/>
				<field
					name="mapCenterLongitude"
					type="text"
					default="37.617300"
					label="MOD_YAMAP_CENTERLONGITUDE_LABEL"
					description="MOD_YAMAP_CENTERLONGITUDE_DESC"
				/>
				<field
					name="mapPlaceLatitude"
					type="text"
					default="55.755826"
					label="MOD_YAMAP_PLACELATITUDE_LABEL"
					description="MOD_YAMAP_PLACELATITUDE_DESC"
				/>
				<field
					name="mapPlaceLongitude"
					type="text"
					default="37.617300"
					label="MOD_YAMAP_PLACELONGITUDE_LABEL"
					description="MOD_YAMAP_PLACELONGITUDE_DESC"
				/>
				<field
					name="hintContent"
					type="text"
					label="MOD_YAMAP_HINTCONTENT_LABEL"
					description="MOD_YAMAP_HINTCONTENT_DESC"
				/>
				<field
					name="balloonContent"
					type="editor"
					default="default"
					label="MOD_YAMAP_BALLOONCONTENT_LABEL"
					description="MOD_YAMAP_BALLOONCONTENT_DESC"
					rows="5"
					cols="5"
					filter="raw"
				/>
            </fieldset>
			<fieldset name="advanced" label="MOD_YAMAP_ICONPARAMS_LABEL">
				<field
					name="iconFile"
					type="media"
					directory="stories"
					label="MOD_YAMAP_ICONFILE_LABEL"
					description="MOD_YAMAP_ICONFILE_DESC"
				/>
				<field
					name="iconWidth"
					type="text"
					default="32"
					label="MOD_YAMAP_ICONWIDTH_LABEL"
					description="MOD_YAMAP_ICONWIDTH_DESC"
				/>
				<field
					name="iconHeight"
					type="text"
					default="32"
					label="MOD_YAMAP_ICONHEIGHT_LABEL"
					description="MOD_YAMAP_ICONHEIGHT_DESC"
				/>
				<field
					name="iconOffsetX"
					type="text"
					default="16"
					label="MOD_YAMAP_ICONOFFSETX_LABEL"
					description="MOD_YAMAP_ICONOFFSETX_DESC"
				/>
				<field
					name="iconOffsetY"
					type="text"
					default="32"
					label="MOD_YAMAP_ICONOFFSETY_LABEL"
					description="MOD_YAMAP_ICONOFFSETY_DESC"
				/>
			</fieldset>
        </fields>      
    </config>
</extension>